<%- include('../partials/header') %>


<form id="new-form" action="/flights" method="POST">

<label><strong>Airline:</strong></label>
    <select name="airline">
      <option value="American">American</option>
      <option value="Southwest">Southwest</option>
      <option value="United">United</option>
    </select>

  <label> <strong>Airport:</strong></label>
    <select name="airport">
      <option value="DEN">DEN</option>
      <option value="AUS">AUS</option>
      <option value="DFW">DFW</option>
      <option value="SAN">SAN</option>
    </select>
  

  <label><strong>Flight Number:</strong></label>
    <input type="number" name="flightNo">
  


  <label><strong>Departs:</strong></label>
    <input type="datetime-local"  name="departs">
    <br>
  
  <button class= "add-flight" type="submit">Add Flight</button>
</form>


<%- include('../partials/footer') %>